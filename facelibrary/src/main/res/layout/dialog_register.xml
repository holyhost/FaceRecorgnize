<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/tv_intro"
        android:gravity="center_horizontal"
        android:text="提示:\n\n是否添加该人脸用于登录？"
        android:textSize="18sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.guo.android_extend.widget.ExtImageView
        android:id="@+id/extimageview"
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_intro"
        android:layout_marginTop="5dp"

        />

    <TextView
        android:gravity="center_horizontal"
        android:id="@+id/editview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/extimageview"
        android:layout_alignRight="@+id/extimageview"
        android:layout_below="@+id/extimageview"
        android:layout_marginTop="-26dp"
        />
</RelativeLayout>